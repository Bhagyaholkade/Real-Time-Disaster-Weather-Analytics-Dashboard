# Environment Variables for Disaster Analytics Dashboard
# Copy this file to .env and fill in your API keys

# Weather API Configuration
OPENWEATHER_API_KEY=your_openweather_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Disaster Data APIs
USGS_EARTHQUAKE_API=https://earthquake.usgs.gov/fdsnws/event/1/query
NOAA_WEATHER_API=https://api.weather.gov

# Map Configuration
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Database Configuration (if using real database)
DATABASE_URL=sqlite:///disaster_data.db

# Application Settings
DEBUG_MODE=False
AUTO_REFRESH_INTERVAL=30
MAX_DATA_POINTS=1000

# Alert Settings
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# ML Model Settings
MODEL_RETRAIN_INTERVAL=24
MODEL_ACCURACY_THRESHOLD=0.8
FEATURE_IMPORTANCE_THRESHOLD=0.01